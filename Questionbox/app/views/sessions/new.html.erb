<header class="header">
<div class="login">
  <% if current_user %>
    <%= link_to 'Log Out', session_path, method: :delete, class: "button" %>
  <% end %>
  <% if !current_user %>
   <%= link_to "Sign Up", new_user_path, class: "button" %> 
   <%= link_to 'Home', root_path, class: "button"%>
  <% end %>
</div>

</header>
<h2 class = "heading"> Welcome qBox user!</h2>
<% if flash[:notice] %>
<p class="flash-error"><%= flash[:notice] %></p>
<% end %>
<% if flash[:error_message]%>
<p class="flash-error"><%= flash[:error_message] %></p>
<% end %>
<%= form_with(url: session_path) do %>
   <p>
    <%=label_tag :username %>
    <%=text_field_tag :username %>
   </p> 
   <p>
    <%=label_tag :password %>
    <%=password_field_tag :password %>
   </p>
    <%=submit_tag "Log in", class: "button" %>
<% end %>
<br>

<%= link_to 'Back', root_path %>